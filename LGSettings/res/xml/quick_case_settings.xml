<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:title="@string/accessory_quick_case_title" android:key="quick_case_settings"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:settings="http://schemas.android.com/apk/res/com.android.lgesettings">
    <PreferenceCategory android:title="@string/display_quick_case_window_category" android:key="front_quick_case_category">
        <Preference android:icon="@drawable/quick_case_view" android:persistent="false" android:title="@string/display_quick_cover_window_title" android:key="quick_cover_window_settings" android:summary="@string/display_quick_cover_window_desc">
            <intent android:targetPackage="com.android.lgesettings" android:action="android.intent.action.MAIN" android:targetClass="com.android.lgesettings.QuickCaseView" />
        </Preference>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/display_quick_case_camera_category" android:key="rear_quick_case_category">
        <Preference android:icon="@drawable/ic_quick_camera_case" android:persistent="false" android:title="@string/display_camera_case_title" android:key="quick_camera_case_settings" android:summary="@string/display_quick_camera_case_desc2">
            <intent android:targetPackage="com.android.lgesettings" android:action="android.intent.action.MAIN" android:targetClass="com.android.lgesettings.QuickCameraCase" />
        </Preference>
    </PreferenceCategory>
</PreferenceScreen>